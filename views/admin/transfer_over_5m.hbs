<div class="container-fluid">
  <div class="content">
    <!-- Transfer History -->
    <div class="content__transfer--over5m text-center">
      <h2 class="text-center mt-4 text-light">Transfer history over 5,000,00đ</h2>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Transfer code</th>
            <th scope="col">Transaction Fee</th>
            <th scope="col">Execution time</th>
            <th scope="col">Transfer amount</th>
            <th scope="col">Message</th>
            <th scope="col">Status</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">1</th>
            <td>T001</td>
            <td>50.000 đ</td>
            <td>27/10/2022</td>
            <td>1.000.000 đ</td>
            <td>I love you</td>
            <td>
              <button data-toggle="modal" data-target="#transfer-agree" class="btn btn-success">
                Agree
              </button>
              <button data-toggle="modal" data-target="#transfer-disagree" class="btn btn-danger">
                Disagree
              </button>
            </td>
          </tr>
        </tbody>
      </table>
      <a href="/admin_system" class="btn btn-light"><i class="fas fa-arrow-left"></i>
        Go back
      </a>
    </div>

    <!-- Modal agree -->
    <div class="modal fade" id="transfer-agree" tabindex="-1" role="dialog" aria-labelledby="transfer-agreeLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <h2>Do you want to approve this account?</h2>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">
              Disagree
            </button>
            <button type="button" class="btn btn-success">Agree</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal disagree -->
    <div class="modal fade" id="transfer-disagree" tabindex="-1" role="dialog" aria-labelledby="transfer-disagreeLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <h2>Do you want to disapprove verification?</h2>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">
              Disagree
            </button>
            <button type="button" class="btn btn-success">Agree</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>